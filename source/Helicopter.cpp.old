//------------------------------------------------------------------------------
// Helicopter.cpp : class definition
//------------------------------------------------------------------------------
#include "Helicopter.h"

//------------------------------------------------------------------------------
// constructor
//------------------------------------------------------------------------------
Helicopter::Helicopter() {
    xPos = 0;
    yPos = 0;
}

//------------------------------------------------------------------------------
// store x, y, and z positions in reference parameters
//------------------------------------------------------------------------------
void Helicopter::getPos(int& x, int& y) {
    x = xPos;
    y = yPos;
}

//------------------------------------------------------------------------------
// return distance traveled
//------------------------------------------------------------------------------
int Helicopter::getXPos() { return xPos; }

//------------------------------------------------------------------------------
// return altitude
//------------------------------------------------------------------------------
int Helicopter::getYPos() { return yPos; }

//------------------------------------------------------------------------------
// increment yPos by passed value
//------------------------------------------------------------------------------
void Helicopter::goUp(int plusY) {
    yPos += plusY;
}

//------------------------------------------------------------------------------
// decrement yPos by passed value
//------------------------------------------------------------------------------
void Helicopter::goDown(int minusY) {
    yPos -= minusY;
}

//------------------------------------------------------------------------------
// go forward
//------------------------------------------------------------------------------
void Helicopter::goForward(int distance) {
    xPos += distance;
}

//------------------------------------------------------------------------------
// reset y position to 0
//------------------------------------------------------------------------------
void Helicopter::goLand() {
    yPos = 0;
}
